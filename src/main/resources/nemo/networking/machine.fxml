<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:id="menu"
      styleClass="dark-blue-panel">

    <!-- nagłówek: u góry, wyśrodkowany poziomo -->
    <VBox alignment="TOP_CENTER" prefHeight="56">
        <Label fx:id="info" styleClass="article-title" />
    </VBox>

    <!-- scroll z zawartością rośnie i zajmuje resztę miejsca -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
        <VBox fx:id="infos" />
    </ScrollPane>

</VBox>

